<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mother">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/holder"
    android:background="@android:color/white"
    tools:context="com.example.souma.vedamagic.MultiplyBy5"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:id="@+id/divider"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10mm"
        android:layout_marginLeft="5mm"
        android:id="@+id/dummy"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer"
        android:layout_gravity="start">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/vedic_maths"
            android:scaleType="fitXY"
            android:id="@+id/cover_pic"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/prof_pic"
            android:src="@drawable/prof_pic"
            android:background="@drawable/profile_pic"
            android:layout_alignLeft="@id/cover_pic"
            android:layout_alignBottom="@id/cover_pic"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
