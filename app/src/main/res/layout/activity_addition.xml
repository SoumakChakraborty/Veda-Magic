<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.souma.vedamagic.Addition">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="120dp"
        android:id="@+id/addition1"
        android:src="@drawable/two"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="40dp"
        android:id="@+id/addition7"
        android:src="@drawable/arrow"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="190dp"
        android:id="@+id/addition2"
        android:src="@drawable/three"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="110dp"
        android:id="@+id/addition3"
        android:src="@drawable/four"
        android:layout_below="@id/addition1"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="180dp"
        android:id="@+id/addition4"
        android:src="@drawable/seven"
        android:layout_below="@id/addition1"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/addition5"
        android:src="@drawable/line"
        android:layout_below="@id/addition3"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="230dp"
        android:id="@+id/addition6"
        android:src="@drawable/arrow"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="170dp"
        android:id="@+id/addition8"
        android:src="@drawable/zero"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginTop="365dp"
        android:layout_marginStart="220dp"
        android:id="@+id/addition11"
        android:src="@drawable/show_arrow"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="110dp"
        android:id="@+id/addition9"
        android:src="@drawable/seven"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="40dp"
        android:id="@+id/addition10"
        android:src="@drawable/one"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carry"
        android:layout_below="@id/addition10"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="35dp"
        android:id="@+id/carrytext"
        android:visibility="invisible"
        />
</RelativeLayout>
