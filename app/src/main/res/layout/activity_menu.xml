<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.souma.vedamagic.Menu"
    android:id="@+id/mydrawer"
    android:background="@drawable/math">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/drawer_toolbar" android:layout_height="wrap_content" android:layout_width="match_parent"></include>
        <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/button1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/choose"
            android:id="@+id/button1"
            android:layout_marginStart="-95dp"
            android:layout_marginTop="55dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/button2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/test"
            android:id="@+id/button2"
            android:onClick="giveTest"
            android:textColor="#ffffff"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-140dp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/button3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/vid"
            android:id="@+id/button3"
            android:layout_marginStart="-95dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="@string/button4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/ebook"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-145dp"
            android:id="@+id/button4"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation"
        android:id="@+id/navlist"
        app:headerLayout="@layout/nav_header"
        android:background="@color/colorPrimary"
        >
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
